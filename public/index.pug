  style.
    @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
    *{
    margin:0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
    }
    body{
    background-color: #080710;
    display: grid;
    place-items: center;
    text-align: center;
    background-size: cover;
    }
    a{
    text-decoration: none;
    color: white;
    }
    .background{
    width: 430px;
    height: 520px;
    position: absolute;
    transform: translate(-50%,-50%);
    left: 50%;
    top: 50%;
    }
    .background .shape{
    height: 200px;
    width: 200px;
    position: absolute;
    border-radius: 50%;
    }
    .shape:first-child{
    background: linear-gradient(
    #1845ad,
    #23a2f6
    );
    left: -50px;
    top: -20px;
    }
    .shape:last-child{
    background: linear-gradient(
    to right,
    #ff512f,
    #f09819
    );
    right: -50px;
    bottom: -140px;
    }
    .content{
    width: 330px;
    border-radius: 10px;
    padding: 40px 30px;
    margin: 100px auto;
    background-color: rgba(255,255,255,0.13);
    backdrop-filter: blur(10px);
    }
    .content .text{
    font-size: 25px;
    font-weight: 600;
    margin-bottom: 35px;
    color: rgb(247, 233, 233);
    }
    .content .field{
    height: 50px;
    width: 100%;
    display: flex;
    position: relative;
    }
    .field input{
    height: 100%;
    width: 100%;
    padding-left: 45px;
    font-size: 18px;
    outline: none;
    border: none;
    color: #e0d2d2;
    border-radius: 8px;
    background: rgba(19, 18, 18, 0);
    backdrop-filter: blur(10px);
    }
    .field input::placeholder{
    color: #e0d2d2a6;
    }
    .field:nth-child(2){
    margin-top: 20px;
    }
    .field span{
    position: absolute;
    width: 50px;
    line-height: 50px;
    color: #ffffff;
    text-decoration: none;
    }
    button{
    margin: 25px 0 0 0;
    width: 100%;
    height: 50px;
    color: #ffffff;
    font-size: 18px;
    font-weight: 600;
    background: rgba(255,255,255,0.05);
    backdrop-filter: blur(10px);
    border: none;
    outline: none;
    cursor: pointer;
    border-radius: 8px;
    }
    .content .or{
    color: rgb(236, 233, 15);
    margin-top: 9px;
    }
    .icon-button{
    margin-top: 15px;
    }
    .icon-button span{
    padding-left: 17px;
    padding-right: 17px;
    padding-top: 6px;
    padding-bottom: 6px;
    text-decoration: none;
    color: #ffffff;
    border-radius: 5px;
    line-height: 30px;
    background: rgba(255, 255, 255, 0.164);
    backdrop-filter: blur(10px);
    }
    .icon-button span.facebook{
    margin-right: 17px;
    }
    button:hover,
    .icon-button span:hover{
    background-color: #babecc8c;
    }
